<!-- START BODY -->

<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">



    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 0;">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-sm-12 col-md-5" style="margin-bottom: auto; margin-top: auto">
                        <h4 style="margin: 0">Quản lý học phần</h4>
                    </div>
                    <div class="col-sm-12 col-md-7" style="text-align: right">
                        <button style="color: white" class="btn btn-success" data-target="#addCourseModal"
                            data-toggle="modal"><i class="flaticon2-plus"></i> Thêm học phần</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="courseTable" style="width:100%"
                        cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã học phần</th>
                                <th>Tên học phần</th>
                                <th>Giảng viên</th>
                                <th>Tín chỉ</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD COURSE -->
    <div data-keyboard="false" data-backdrop="static" id="addCourseModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="addCourseForm">
                    <div class="modal-header">
                        <h4 class="modal-title" style="font-weight: bold;">Tạo mới học phần</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="inputId">Mã học phần</label>
                            <input type="text" name="courseId" id="inputId" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="inputName">Tên học phần</label>
                            <input type="text" name="name" id="inputName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="inputTeacher">Giảng viên</label>
                            <input type="text" name="teacher" id="inputTeacher" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="inputCredits">Tín chỉ</label>
                            <input type="number" name="credits" id="inputCredits" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy">
                        <input type="submit" class="btn btn-success" value="Đồng ý">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- EDIT COURSE -->
    <div data-keyboard="false" data-backdrop="static" id="editCourseModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editCourseForm">
                    <div class="modal-header">
                        <h4 class="modal-title" style="font-weight: bold;">Chỉnh sửa học phần</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="inputId2">Mã học phần</label>
                            <input type="text" name="courseId" id="inputId2" class="form-control"
                                style="font-weight: bold;" readonly required>
                        </div>
                        <div class="form-group">
                            <label for="inputName2">Tên học phần</label>
                            <input type="text" name="name" id="inputName2" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="inputTeacher2">Giảng viên</label>
                            <input type="text" name="teacher" id="inputTeacher2" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="inputCredits2">Tín chỉ</label>
                            <input type="number" name="credits" id="inputCredits2" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy">
                        <input type="submit" class="btn btn-success" value="Đồng ý">
                    </div>
                </form>
            </div>
        </div>
    </div>



</div>


<!-- END BODY -->

