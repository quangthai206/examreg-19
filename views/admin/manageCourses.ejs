<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script>
    let Popup, dataTable;
    $(document).ready(function () {
        dataTable = $("#courseTable").DataTable({
            "ajax": {
                "url": "/admin/getAllCourses",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [{
                    "data": "courseId"
                },
                {
                    "data": "name"
                },
                {
                    "data": "teacher"
                },
                {
                    "data": "credits"
                },
                {
                    "data": "courseId",
                    "render": function (data, type, row, meta) {
                        return `<button style='color: white' onclick='editButtonClicked("${row.courseId}", "${row.name}", "${row.teacher}", "${row.credits}")' data-target='#editCourseModal' data-toggle='modal' class='btn btn-info btn-sm'><i class='flaticon2-edit'></i> Sửa</button><button class='btn btn-danger btn-sm' style='margin-left: 5px; color: white' onclick='deleteCourse("${data}")'><i class='flaticon-delete'></i> Xóa</button><a class='btn btn-success btn-sm' style='color: white; margin-left: 5px;' href='/admin/courses/${data}'><i class='flaticon2-information'></i> Chi tiết</a>`;
                    },
                    "orderable": false,
                    "width": "19em",
                    "searchable": false
                }
            ],
            "language": {
                "sProcessing": "Đang xử lý...",
                "sLengthMenu": "Xem _MENU_ mục",
                "sZeroRecords": "Không tìm thấy kết quả phù hợp",
                "sEmptyTable": "Không có dữ liệu trong bảng",
                "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                "sSearch": "Tìm kiếm:",
                "oPaginate": {
                    "sFirst": "Đầu tiên",
                    "sLast": "Cuối cùng",
                    "sNext": "Sau",
                    "sPrevious": "Trước"
                },
            }
        });


    });
</script>

<script>
    $('#addCourseModal').on('hide.bs.modal', () => {
        document.getElementById("addCourseForm").reset();
    });

    $("#addCourseForm").submit(function (e) {
        e.preventDefault();

        const formData = new FormData($('#addCourseForm')[0]);
        let jsonObject = {};

        for (const [key, value] of formData.entries()) {
            jsonObject[key] = value;
        }
        $.ajax({
            url: '/admin/courses',
            type: 'POST',
            data: JSON.stringify(jsonObject),
            datatype: 'json',
            contentType: 'application/json',
            success: function (data) {
                if (data.status === 'success') {
                    dataTable.ajax.reload();
                    $.notify({
                        message: data.message
                    }, {
                        type: 'success'
                    });
                } else {
                    $.notify({
                        message: data.message
                    }, {
                        type: 'danger'
                    });
                }
                $('#addCourseModal').modal('toggle');
            }
        });

    });

    function editButtonClicked(courseId, name, teacher, credits) {
        $('#inputId2').val(courseId);
        $('#inputName2').val(name);
        $('#inputTeacher2').val(teacher);
        $('#inputCredits2').val(credits);
    }

    $("#editCourseForm").submit(function (e) {
        e.preventDefault();

        const formData = new FormData($('#editCourseForm')[0]);
        let jsonObject = {};

        for (const [key, value] of formData.entries()) {
            jsonObject[key] = value;
        }

        $.ajax({
            url: '/admin/courses/' + jsonObject.courseId,
            type: 'PATCH',
            data: JSON.stringify(jsonObject),
            datatype: 'json',
            contentType: 'application/json',
            success: function (data) {
                if (data.status === 'success') {
                    dataTable.ajax.reload();
                    $.notify({
                        message: data.message
                    }, {
                        type: 'success'
                    });
                } else {
                    $.notify({
                        message: data.message
                    }, {
                        type: 'danger'
                    });
                }
                $('#editCourseModal').modal('toggle');
            }
        });

    });

    function deleteCourse(courseId) {
        bootbox.confirm({
            closeButton: false,
            title: "Xóa học phần",
            message: "Bạn có chắc chắn muốn xóa học phần này không?",
            buttons: {
                cancel: {
                    label: '<i class="flaticon2-delete"></i> Hủy bỏ',
                    className: 'btn btn-secondary bootbox-cancel'
                },
                confirm: {
                    label: '<i class="fa fa-check"></i> Đồng ý'
                }
            },
            callback: function (result) {
                if (result) {
                    $.ajax({
                        type: "DELETE",
                        url: "/admin/courses/" + courseId,
                        success: function (response) {
                            if (response.status === "success") {
                                dataTable.ajax.reload();
                                $.notify({
                                    message: response.message
                                }, {
                                    type: 'success'
                                });

                            } else {
                                $.notify({
                                    message: response.message
                                }, {
                                    type: 'danger'
                                });
                            }
                        }
                    });
                }
            }
        });

    }
</script>

<!-- end view -->
