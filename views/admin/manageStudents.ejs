<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">



    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content" style="padding-top: 0;">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-sm-12 col-md-5" style="margin-bottom: auto; margin-top: auto">
                        <h4 style="margin: 0">Quản lý sinh viên</h4>
                    </div>
                    <div class="col-sm-12 col-md-7" style="text-align: right">
                        <button style="color: white" class="btn btn-success" data-target="#addStudentModal"
                            data-toggle="modal"><i class="flaticon2-plus"></i> Thêm sinh viên</button>
                        <button class="btn btn-secondary" data-target="#importStudentModal" data-toggle="modal"><i
                                class="fa fa-upload"></i> Import</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="studentTable" style="width:100%"
                        cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã sinh viên</th>
                                <th>Họ và tên</th>
                                <th>Ngày sinh</th>
                                <th>Lớp</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD STUDENT -->
    <div data-keyboard="false" data-backdrop="static" id="addStudentModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="addStudentForm">
                    <div class="modal-header">
                        <h4 class="modal-title" style="font-weight: bold;">Thêm mới sinh viên</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="inputId">Mã sinh viên</label>
                            <input type="text" name="sid" id="inputId" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="inputName">Họ và tên</label>
                            <input type="text" name="name" id="inputName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="inputBirthday">Ngày sinh</label>
                            <input type="text" name="birthday" id="inputBirthday" class="form-control"
                                placeholder="dd/mm/yyyy" required>
                        </div>
                        <div class="form-group">
                            <label for="inputClass">Lớp</label>
                            <input type="text" name="class" id="inputClass" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy">
                        <input type="submit" class="btn btn-success" value="Đồng ý">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- EDIT STUDENT -->
    <div data-keyboard="false" data-backdrop="static" id="editStudentModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editStudentForm">
                    <div class="modal-header">
                        <h4 class="modal-title" style="font-weight: bold;">Cập nhật sinh viên</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="inputId2">Mã sinh viên</label>
                            <input type="text" name="sid" id="inputId2" class="form-control" required readonly
                                style="font-weight: bold;">
                        </div>
                        <div class="form-group">
                            <label for="inputName2">Họ và tên</label>
                            <input type="text" name="name" id="inputName2" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="inputBirthday2">Ngày sinh</label>
                            <input type="text" name="birthday" id="inputBirthday2" class="form-control"
                                placeholder="dd/mm/yyyy" required>
                        </div>
                        <div class="form-group">
                            <label for="inputClass2">Lớp</label>
                            <input type="text" name="class" id="inputClass2" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy">
                        <input type="submit" class="btn btn-success" value="Đồng ý">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- IMPORT STUDENT -->
    <div data-keyboard="false" data-backdrop="static" id="importStudentModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" style="font-weight: bold;">Import dữ liệu bằng excel (.xlsx, xls)</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <p>Chọn file cần import dữ liệu, hệ thống sẽ tự động cập nhật sau vài giây.</p>
                        <div class="custom-file">
                            <form id="importStudentForm">
                                <input type="file" class="custom-file-input" id="customFile" accept=".xls, .xlsx">
                            </form>
                            <label class="custom-file-label" for="customFile">Chọn file</label>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>


