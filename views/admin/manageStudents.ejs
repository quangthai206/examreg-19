<script>
    let Popup, dataTable;
    $(document).ready(function () {
        dataTable = $("#studentTable").DataTable({
            "ajax": {
                "url": "/admin/getAllStudents",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [{
                    "data": "sid"
                },
                {
                    "data": "name"
                },
                {
                    "data": (row, type, val, meta) =>
                        row.birthday == null ? "???" : row.birthday
                },
                {
                    "data": (row, type, val, meta) =>
                        row.class == null ? "???" : row.class
                },
                {
                    "data": "sid",
                    "render": function (data, type, row, meta) {
                        return `<button style='color: white' onclick='editButtonClicked("${row.sid}", "${row.name}", "${row.birthday}", "${row.class}")' data-target='#editStudentModal' data-toggle='modal' class='btn btn-info btn-sm'><i class='flaticon2-edit'></i> Sửa</button><button class='btn btn-danger btn-sm' style='margin-left: 5px; color: white' onclick='deleteStudent("${data}")'><i class='flaticon-delete'></i> Xóa</button>`;
                    },
                    "orderable": false,
                    "width": "150px",
                    "searchable": false
                }
            ],
            "language": {
                "sProcessing": "Đang xử lý...",
                "sLengthMenu": "Xem _MENU_ mục",
                "sZeroRecords": "Không tìm thấy kết quả phù hợp",
                "sEmptyTable": "Không có dữ liệu trong bảng",
                "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                "sSearch": "Tìm kiếm:",
                "oPaginate": {
                    "sFirst": "Đầu tiên",
                    "sLast": "Cuối cùng",
                    "sNext": "Sau",
                    "sPrevious": "Trước"
                },
            }
        });


    });
</script>

<script>
    $('#addStudentModal').on('hide.bs.modal', () => {
        document.getElementById("addStudentForm").reset();
    });

    $("#addStudentForm").submit(function (e) {
        e.preventDefault();

        const formData = new FormData($('#addStudentForm')[0]);
        let jsonObject = {};

        for (const [key, value] of formData.entries()) {
            jsonObject[key] = value;
        }
        $.ajax({
            url: '/admin/students',
            type: 'POST',
            data: JSON.stringify(jsonObject),
            datatype: 'json',
            contentType: 'application/json',
            success: function (data) {
                if (data.status === 'success') {
                    dataTable.ajax.reload();
                    $.notify({
                        message: data.message
                    }, {
                        type: 'success'
                    });
                } else {
                    $.notify({
                        message: data.message
                    }, {
                        type: 'danger'
                    });
                }
                $('#addStudentModal').modal('toggle');
            }
        });

    });

    function editButtonClicked(sid, name, birthday, sclass) {
        $('#inputId2').val(sid);
        $('#inputName2').val(name);
        $('#inputBirthday2').val(birthday);
        $('#inputClass2').val(sclass);
    }

    $("#editStudentForm").submit(function (e) {
        e.preventDefault();

        const formData = new FormData($('#editStudentForm')[0]);
        let jsonObject = {};

        for (const [key, value] of formData.entries()) {
            jsonObject[key] = value;
        }

        $.ajax({
            url: '/admin/students/' + jsonObject.sid,
            type: 'PATCH',
            data: JSON.stringify(jsonObject),
            datatype: 'json',
            contentType: 'application/json',
            success: function (data) {
                if (data.status === 'success') {
                    dataTable.ajax.reload();
                    $.notify({
                        message: data.message
                    }, {
                        type: 'success'
                    });
                } else {
                    $.notify({
                        message: data.message
                    }, {
                        type: 'danger'
                    });
                }
                $('#editStudentModal').modal('toggle');
            }
        });

    });


    function deleteStudent(sid) {
        bootbox.confirm({
            closeButton: false,
            title: "Xóa sinh viên",
            message: "Bạn có chắc chắn muốn xóa sinh viên này không?",
            buttons: {
                cancel: {
                    label: '<i class="flaticon2-delete"></i> Hủy bỏ',
                    className: 'btn btn-secondary bootbox-cancel'
                },
                confirm: {
                    label: '<i class="fa fa-check"></i> Đồng ý'
                }
            },
            callback: function (result) {
                if (result) {
                    $.ajax({
                        type: "DELETE",
                        url: "/admin/students/" + sid,
                        success: function (response) {
                            if (response.status === "success") {
                                dataTable.ajax.reload();
                                $.notify({
                                    message: response.message
                                }, {
                                    type: 'success'
                                });

                            } else {
                                $.notify({
                                    message: response.message
                                }, {
                                    type: 'danger'
                                });
                            }
                        }
                    });
                }
            }
        });

    }

    $("#customFile").change(function (evt) {
        var selectedFile = evt.target.files[0];
        var reader = new FileReader();
        reader.onload = function (event) {
            var data = event.target.result;
            var workbook = XLSX.read(data, {
                type: 'binary'
            });
            workbook.SheetNames.forEach(function (sheetName) {

                var XL_row_object = XLSX.utils.sheet_to_row_object_array(workbook
                    .Sheets[sheetName]);
                var json_object = JSON.stringify(XL_row_object);
                console.log(XL_row_object);

                console.log(json_object);

                // AJAX CALL
                $.ajax({
                    url: "/admin/students/import",
                    type: "POST",
                    data: json_object,
                    contentType: 'application/json',
                    success: function (data) {
                        setTimeout(() => {
                            dataTable.ajax.reload();
                        }, 2000);
                        Swal.fire(
                            'Hoàn tất!',
                            'Thêm thành công: ' + (XL_row_object.length -
                                data.countFail) + '/' + XL_row_object.length,
                            'success'
                        )
                    }
                });

            })
        };
        reader.onerror = function (event) {
            console.error("File could not be read! Code " + event.target.error.code);
        };
        reader.readAsBinaryString(selectedFile);

        $('#importStudentModal').modal('toggle');

        $('#importStudentForm')[0].reset();

    });
</script>

